{
  "name": "zeronaut-contracts",
  "version": "1.0.0",
  "description": "Contracts for Zeronaut",
  "scripts": {
    "build": "bash scripts/install-fixtures.sh",
    "compile": "npx hardhat compile && bash scripts/compile-fixtures.sh",
    "test": "mocha",
    "generate:contract": "bash scripts/generate-contract.sh",
    "generate:acir": "bash scripts/generate-acir.sh",
    "deploy": "hardhat ignition deploy ignition/modules/ZeronautModule.js",
    "deploy:upgrade": "hardhat ignition deploy ignition/modules/UpgradeModule.js",
    "verify": "hardhat ignition verify --include-unrelated-contracts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@noir-lang/backend_barretenberg": "0.31.0",
    "@noir-lang/noir_js": "0.31.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-ignition-etherscan": "^0.15.0",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.11",
    "mocha": "^10.7.3"
  }
}
